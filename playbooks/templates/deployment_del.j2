apiVersion: v1
kind: Deployment
metadata:
  name: {{ istio_deplyment_name }}
  namespace: {{ istio_namespace }}
spec:
  template:
    spec:
      containers:
      - name: istio-proxy
        ports:
        - containerPort: {{ thegateway.resources[0].spec.servers[0].port.number }}
          protocol: TCP
          $patch: delete
